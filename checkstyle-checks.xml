<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
  "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
  "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
  <property name="severity" value="error"/>

  <!-- Checks for proper line length (e.g., no more than 100 characters in a line). -->
  <module name="LineLength">
    <property name="max" value="1"/>
  </module>

  <!-- Checks that files end with a new line. -->
  <module name="NewlineAtEndOfFile"/>

  <module name="TreeWalker">

    <!-- Checks that Java code files should not contain import statements that use the asterisk (*) notation. -->
    <module name="AvoidStarImport"/>

    <!-- Checks that class and interface definitions are properly formatted. -->
    <module name="LeftCurly"/>
    <module name="RightCurly"/>

    <!-- Checks that there is no whitespace after a token. -->
    <module name="NoWhitespaceAfter"/>

    <!-- Checks for whitespace around tokens. -->
    <module name="WhitespaceAround"/>

  </module>
</module>
